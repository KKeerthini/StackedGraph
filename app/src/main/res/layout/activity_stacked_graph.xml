<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stacked_graph"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.graphlayout.stackedgraph.StackedGraphActivity">

    <TextView
        android:id="@+id/positiveXvalues"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:text="10"
        app:layout_constraintLeft_toLeftOf="@+id/activity_stacked_graph"
        app:layout_constraintTop_toBottomOf="@+id/negativeXvalues"
        app:layout_constraintRight_toRightOf="@+id/activity_stacked_graph" />

    <TextView
        android:id="@+id/negativeXvalues"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/colorAccent"
        android:text="10"
        app:layout_constraintLeft_toLeftOf="@+id/activity_stacked_graph"
        app:layout_constraintTop_toTopOf="@+id/activity_stacked_graph"
        app:layout_constraintRight_toRightOf="@+id/activity_stacked_graph"
        app:layout_constraintBottom_toBottomOf="@+id/activity_stacked_graph" />


</android.support.constraint.ConstraintLayout>
